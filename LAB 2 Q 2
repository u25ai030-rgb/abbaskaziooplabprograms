class Invoice {
    String partNumber;
    String partDescription;
    int quantity;
    double pricePerItem;

    public Invoice(String num, String desc, int qty, double price) {
        partNumber = num;
        partDescription = desc;
        
        if (qty > 0) quantity = qty;
        else quantity = 0;
        
        if (price > 0.0) pricePerItem = price;
        else pricePerItem = 0.0;
    }

    public double getInvoiceAmount() {
        return quantity * pricePerItem;
    }
    
    public void setPartNumber(String n) { partNumber = n; }
    public String getPartNumber() { return partNumber; }
    
    public void setPartDescription(String d) { partDescription = d; }
    public String getPartDescription() { return partDescription; }
    
    public void setQuantity(int q) {
        if (q > 0) quantity = q;
        else quantity = 0;
    }
    public int getQuantity() { return quantity; }
    
    public void setPricePerItem(double p) {
        if (p > 0.0) pricePerItem = p;
        else pricePerItem = 0.0;
    }
    public double getPricePerItem() { return pricePerItem; }
}

public class InvoiceTest {
    public static void main(String[] args) {
        Invoice inv = new Invoice("1234", "Hammer", 2, 15.0);
        
        System.out.println("Part: " + inv.getPartNumber());
        System.out.println("Desc: " + inv.getPartDescription());
        System.out.println("Qty: " + inv.getQuantity());
        System.out.println("Price: " + inv.getPricePerItem());
        System.out.println("Total Amount: " + inv.getInvoiceAmount());
    }
}
